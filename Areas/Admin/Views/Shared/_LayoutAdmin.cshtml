<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quanlykytucxa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome-free-6.7.2/css/all.css" />

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }


        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            background-color: #444;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            margin-right: 10px;
        }

        .logo span {
            font-size: 18px;
            font-weight: bold;
        }

        .menu-item {
            background-color: #2f353a;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .menu-header ul {
            list-style-type: none; /* Xóa dấu chấm */
            padding: 0; /* Xóa padding */
        }

        .menu-header li {
            padding: 10px; /* Padding cho từng mục menu */
            cursor: pointer; /* Hiển thị con trỏ khi hover */
            transition: background-color 0.3s; /* Hiệu ứng chuyển màu */
            border-bottom: 1px solid #ccc; /* Đường viền dưới mỗi mục */
        }

            .menu-header li:hover {
                background-color: #007bff; /* Màu xanh dương sáng khi hover */
                color: white; /* Màu chữ trắng khi hover */
            }

            .menu-header li:last-child {
                border-bottom: none; /* Xóa đường viền cho mục cuối cùng */
            }

        .menu-header a {
            color: white; /* Màu chữ */
            text-decoration: none; /* Xóa gạch chân */
            display: flex; /* Căn chỉnh icon và text */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

            .menu-header a i {
                margin-right: 8px; /* Khoảng cách giữa icon và chữ */
            }

            .menu-header a:hover {
                background-color: #007bff; /* Màu nền khi hover */
                color: white; /* Màu chữ khi hover */
            }

        .submenu {
            background-color: white;
            color: black;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
        }

            .submenu label {
                display: block;
                margin-bottom: 8px;
                font-size: 14px;
                cursor: pointer;
            }

            .submenu input[type="radio"] {
                margin-right: 8px;
            }

        .contain {
            display: flex;
        }

        .container {
            flex: 1;
            margin: 0;
            max-width: 100%;
        }

        .sidebar {
            width: 250px;
            height: 400hv;
            background-color: #2f353a;
            color: white;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="contain">
        <div class="sidebar">
            <div class="logo">
                <div class="logo-icon">A</div>
                <span>Quản lý ký túc x</span>
            </div>

            <div class="menu">
                <div class="menu-item active">
                    <div class="menu-header">
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i>Trang chủ</a></li>
                            <li><a asp-area="Admin" asp-controller="ArrangeRoom" asp-action="Index"><i class="fa-solid fa-bell"></i>Thông báo đến</a></li>
                            <li><a href="cai-dat.html"><i class="fa-solid fa-cog"></i>Cài đặt</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-sign-out-alt"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Quanlykytucxa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>