<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quanlykytucxa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #2f353a;
            color: white;
            padding: 15px;
        }

        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            background-color: #444;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            margin-right: 10px;
        }

        .logo span {
            font-size: 18px;
            font-weight: bold;
        }

        .menu-item {
            background-color: #007bff;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .menu-header {
            display: flex;
            justify-content: space-between;
            cursor: pointer;
        }

        .submenu {
            background-color: white;
            color: black;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
        }

            .submenu label {
                display: block;
                margin-bottom: 8px;
                font-size: 14px;
                cursor: pointer;
            }

            .submenu input[type="radio"] {
                margin-right: 8px;
            }

            .contain {
                display: flex;
            }

            .sidebar {
                flex: 1;
            }

            .container {
                flex: 4;
            }
    </style>
</head>
<body>
    <div class="contain">
        <div class="sidebar">
            <div class="logo">
                <div class="logo-icon">A</div>
                <span>VanHiep.Net</span>
            </div>

            <div class="menu">
                <div class="menu-item active">
                    <div class="menu-header">
                        <ul>
                            <li>Quan li sinh vien</li>
                            <li>Quan li sinh vien</li>
                            <li>Quan li sinh vien</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Quanlykytucxa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
