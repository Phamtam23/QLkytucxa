

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="font-size: 48px; border-bottom: 1px solid; padding-left: 10px">Danh sách sinh viên</h2>

<div>
    <div>
        <form method="get" asp-action="Index">
            <div class="input-group mb-3">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm sinh viên...">
                <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            </div>
        </form>

        <div style="margin-bottom: 10px;">
            <strong>Tổng số sinh viên: @Model?.Count() ?? 0</strong>
        </div>

        <a class="btn btn-success mb-3" asp-action="Create">+ Thêm mới sinh viên</a>

        <div style="max-height: 400px; overflow-y: auto;">
            <table class="table table-bordered table-striped text-nowrap">
                <thead class="table-primary">
                    <tr>
                        <th>STT</th>
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>CCCD</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <!-- Thêm cột hành động nếu cần -->
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var stt = 1;
                        foreach (var sv in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@sv.TenSv</td>
                                <td>@sv.NgaySinh.ToString("dd/MM/yyyy")</td>
                                <td>@sv.GioiTinh</td>
                                <td>@sv.Cccd</td>
                                <td>@sv.Sdt</td>
                                <td>@sv.Email</td>
                                <td>@sv.DiaChi</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@sv.Id"><i class="fa-solid fa-pen"></i></a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@sv.Id"><i class="fa-solid fa-trash"></i></a>
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@sv.Id"><i class="fa-solid fa-magnifying-glass"></i></a>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Không có sinh viên nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .icon {
        margin-right: 10px;
    }
</style>
