<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quanlykytucxa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/trangchu.css" />
    <link rel="stylesheet" href="~/css/dangkyphong.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Header */
        .custom-header {
            background-color: #333; /* Nền đen */
            padding: 10px 20px;
        }

        /* Phần bao toàn bộ header */
        .header_item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Logo hoặc tên hệ thống */
        .navbar-brand {
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }

        /* Menu chính */
        .main-menu {
            display: flex;
            list-style: none;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

            /* Mục trong menu */
            .main-menu li a {
                color: white;
                text-decoration: none;
                padding: 8px 12px;
                display: block;
                transition: color 0.3s ease;
            }

                /* Hover: chuyển sang màu vàng */
                .main-menu li a:hover {
                    color: #ffd700;
                }
        .intro-image img{
            max-width:100%;
        }
    </style>
</head>

<body>

    <header class="custom-header">
        <div class="header_item">
            <div class="header_left">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Quản lý ký túc xá</a>
            </div>
            <div>
                <ul class="main-menu">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SinhVien" asp-action="XemPhong">Đăng ký phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SinhVien" asp-action="DangKyPhong">Lịch sử phòng ở</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SinhVien" asp-action="DangKyPhong">Điện nước</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SinhVien" asp-action="ThanhToanDienNuoc">Thông báo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                    </li>
                </ul>
            </div>
           
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Quanlykytucxa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
